doctype html
html
  head
   meta(charset='utf-8')
  body
    ul#account
      if user
        li
          a(href='/auth/logout') Log out,
          = user.displayName
      else
        li
          a(href='/auth/login') Log in
        li
          a(href='/auth/register') Register
    h1
      a(href="/topic") Server-side JavaScript
    ul
      each topic in topics
        li
          - rid = encodeURIComponent(topic['@rid'])
          a(href='/topic/' + rid)= topic.title
    block content
